// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String?  // Optional for now to support existing users
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  projectAssignments ProjectAssignment[]
  createdVMs         VMRecord[]
  auditLogs          AuditLog[]

  @@map("users")
}

model Project {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  vms             VMRecord[]
  userAssignments ProjectAssignment[]

  @@map("projects")
}

model ProjectAssignment {
  id         String   @id @default(cuid())
  userId     String
  projectId  String
  assignedAt DateTime @default(now())

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@map("project_assignments")
}

model VMRecord {
  id                String    @id @default(cuid())
  email             String
  vmAccount         String
  vmInternalIP      String
  vmDomain          String
  createdAt         DateTime  @default(now())
  lastExpiryDate    DateTime?
  currentExpiryDate DateTime
  projectId         String
  createdBy         String
  updatedAt         DateTime  @updatedAt

  // Relations
  project          Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  creator          User              @relation(fields: [createdBy], references: [id])
  notificationLogs NotificationLog[]

  @@map("vm_records")
}

model AuditLog {
  id         String                 @id @default(cuid())
  operation  String
  entityType String
  entityId   String
  userId     String
  userEmail  String
  changes    String?                // Changed from Json to String for SQLite compatibility
  timestamp  DateTime               @default(now())
  ipAddress  String?

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

model NotificationLog {
  id             String             @id @default(cuid())
  vmId           String
  recipientEmail String
  status         NotificationStatus @default(PENDING)
  sentAt         DateTime?
  errorMessage   String?
  retryCount     Int                @default(0)
  createdAt      DateTime           @default(now())

  // Relations
  vm VMRecord @relation(fields: [vmId], references: [id], onDelete: Cascade)

  @@map("notification_logs")
}

enum UserRole {
  ADMIN
  USER
}

enum NotificationStatus {
  PENDING
  SENT
  FAILED
}
